<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
             tools:context="com.group4.tickettoride.Game.GameFragments.TrainCardPickerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/routeTitle"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/routeCardRequirements"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--Purple Card-->
        <LinearLayout
            android:id="@+id/purpleCard_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            >

            <Button
                android:id="@+id/purpleCard_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/plus"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:src="@drawable/traincardpurple"/>

            <Button
                android:id="@+id/purpleCard_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/minus"
                android:enabled="false"/>

            <TextView
                android:id="@+id/purpleCard_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_count"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

        </LinearLayout>

        <!--White Card-->
        <LinearLayout
            android:id="@+id/whiteCard_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/whiteCard_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/plus"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:src="@drawable/traincardwhite"/>

            <Button
                android:id="@+id/whiteCard_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/minus"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/whiteCard_count"
                android:text="@string/default_count"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                />

        </LinearLayout>

        <!--Blue Card-->
        <LinearLayout
            android:id="@+id/blueCard_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/blueCard_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/plus"/>

            <ImageView
